<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<ToolBar xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
         maxWidth="1.7976931348623157E308" minWidth="200.0" prefHeight="40.0"
         fx:controller="org.plateau.citygmleditor.citygmleditor.ToolbarController">
    <ToggleButton mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" selected="true" onAction="#onSelect">
        <toggleGroup>
            <!--suppress JavaFxUnresolvedFxIdReference -->
            <ToggleGroup fx:id="toggleGroup"/>
        </toggleGroup>
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/icon_select.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" toggleGroup="$toggleGroup" onAction="#onMove">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/icon_move.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" toggleGroup="$toggleGroup" onAction="#onRotation">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/icon_rotate.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0" toggleGroup="$toggleGroup" onAction="#onScale">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/icon_scale.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
</ToolBar>
