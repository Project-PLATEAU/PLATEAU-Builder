<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<ToolBar id="toolbar" maxWidth="1.7976931348623157E308" prefHeight="80.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.plateaubuilder.gui.main.TopPanelController">
    <!--ファイル-->
    <Button text="ファイル" contentDisplay="TOP" graphicTextGap="0.0" onMouseEntered="#showFileMenu"  >
        <graphic>
            <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/icon_file.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <!--品質検査-->
    <Button contentDisplay="TOP" graphicTextGap="0.0" mnemonicParsing="false" onAction="#openValidationWindow" text="品質検査">
        <graphic>
            <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                <viewport>
                    <Rectangle2D />
                </viewport>
                <image>
                    <Image url="@../images/icon_check.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <!--CSV-->
    <Button text="CSV" contentDisplay="TOP" graphicTextGap="0.0" onMouseEntered="#showCsvMenu" >
        <graphic>
            <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/icon_csv.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

</ToolBar>
