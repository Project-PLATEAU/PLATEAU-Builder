<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox spacing="8.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.plateaubuilder.gui.main.AdjustPerspectiveController">
   <children>
      <Group>
         <children>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icon_compass.png" />
               </image>
            </ImageView>
            <Canvas fx:id="arrowCanvas" height="60.0" width="60.0"/>
         </children>
         <HBox.margin>
            <Insets top="8.0" />
         </HBox.margin>
      </Group>
      <VBox alignment="CENTER" prefHeight="128.0" prefWidth="48.0" spacing="8.0">
         <children>
            <ImageView fx:id="iconZoom" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icon_view_zoom.png" />
               </image>
            </ImageView>
            <ImageView fx:id="iconPan" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true">
               <image>
                  <Image url="@../images/icon_view_pan.png" />
               </image>
            </ImageView>
            <ImageView fx:id="iconRotate" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icon_view_rotate.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </children>
</HBox>
